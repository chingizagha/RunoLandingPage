<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/adminStyle.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/themes/redmond/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/themes/redmond/jquery-ui.min.css" rel="stylesheet" />
    <script href="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>

    <link rel="icon" type="image/x-icon" href="~/image/favicon.ico">
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Toggle button -->
            <button class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarLeftAlignExample"
                    aria-controls="navbarLeftAlignExample"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarLeftAlignExample">
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">


                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">To Site</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="Chingiz" asp-controller="Request" asp-action="List">Request List</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>

                <!-- Left links -->
            </div>
                
            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>

    <div class="container">

        @RenderBody()

    </div>

    @RenderSection("scripts", required: false)

</body>
</html>



