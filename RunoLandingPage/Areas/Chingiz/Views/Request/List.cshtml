@model HomeViewModel


@foreach (var item in @Model.Requests)
{
    <div class="card mt-3">
        <div class="card-header">
            @item.Name
        </div>
        <div class="card-body">
            <h5 class="card-title">Surname: @item.Surname</h5>
            <p class="card-text">Company Name: @item.Company</p>

            <a asp-controller="Request" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Details</a>

            <form asp-controller="Request" asp-action="Remove" asp-route-id="@item.Id" class="d-inline"
              onclick="return confirm('Are you sure you want to delete @item.Name?')">
                <button type="submit" class="btn btn-primary">Remove</button>
            </form>

        </div>
    </div>
}